#!/bin/sh
set -e
   	mkdir -p /home/lagadanu/Desktop/qemu/out-br/build/buildroot-fs/cpio/target
	tar xf /home/lagadanu/Desktop/qemu/out-br/build/buildroot-fs/rootfs.common.tar -C /home/lagadanu/Desktop/qemu/out-br/build/buildroot-fs/cpio/target
   	if [ ! -e /home/lagadanu/Desktop/qemu/out-br/build/buildroot-fs/cpio/target/init ]; then /usr/bin/install -m 0755 fs/cpio/init /home/lagadanu/Desktop/qemu/out-br/build/buildroot-fs/cpio/target/init; fi
	mkdir -p /home/lagadanu/Desktop/qemu/out-br/build/buildroot-fs/cpio/target/dev
	mknod -m 0622 /home/lagadanu/Desktop/qemu/out-br/build/buildroot-fs/cpio/target/dev/console c 5 1
   
   	cd /home/lagadanu/Desktop/qemu/out-br/build/buildroot-fs/cpio/target && find . | cpio --quiet -o -H newc > /home/lagadanu/Desktop/qemu/out-br/images/rootfs.cpio
